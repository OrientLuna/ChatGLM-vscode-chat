{
	"name": "chatglm-router-vscode",
	"publisher": "OrientLuna",
	"displayName": "ChatGLM Router for GitHub Copilot Chat",
	"description": "将 ChatGLM（Coding 套餐和 General 通用端）集成到 GitHub Copilot Chat，针对代码生成优化",
	"icon": "assets/logo.png",
	"readme": "README.zh-CN.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/OrientLuna/ChatGLM-vscode-chat"
	},
	"version": "0.1.2",
	"engines": {
		"vscode": "^1.104.0"
	},
	"keywords": [
		"chatglm",
		"glm",
		"ai",
		"copilot",
		"chat",
		"code generation",
		"chinese ai",
		"智谱",
		"编程"
	],
	"categories": [
		"AI",
		"Chat"
	],
	"galleryBanner": {
		"color": "#100f11",
		"theme": "dark"
	},
	"badges": [
		{
			"url": "https://img.shields.io/github/stars/OrientLuna/ChatGLM-vscode-chat?style=social",
			"description": "Star ChatGLM-vscode-chat on Github",
			"href": "https://github.com/OrientLuna/ChatGLM-vscode-chat"
		}
	],
	"homepage": "https://github.com/OrientLuna/ChatGLM-vscode-chat",
	"bugs": {
		"url": "https://github.com/OrientLuna/ChatGLM-vscode-chat/issues"
	},
	"license": "MIT",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"languageModelChatProviders": [
			{
				"vendor": "chatglm-router",
				"displayName": "ChatGLM Router",
				"managementCommand": "chatglmRouter.manage"
			}
		],
		"commands": [
			{
				"command": "chatglmRouter.manage",
				"title": "管理 ChatGLM Router"
			},
			{
				"command": "chatglmRouter.showStatistics",
				"title": "显示使用统计"
			},
			{
				"command": "chatglmRouter.resetStatistics",
				"title": "重置使用统计"
			},
			{
				"command": "chatglmRouter.showStatisticsInOutput",
				"title": "在输出中显示统计"
			},
			{
				"command": "chatglmRouter.clearApiKey",
				"title": "清除 ChatGLM API Key"
			}
		],
		"configuration": {
			"title": "ChatGLM Router",
			"properties": {
				"chatglmRouter.defaultProvider": {
					"type": "string",
					"enum": ["chatglm-coding", "chatglm-general"],
					"default": "chatglm-coding",
					"description": "默认提供商（ChatGLM Coding 套餐推荐用于 VS Code）",
					"enumDescriptions": [
						"ChatGLM Coding 套餐 - 针对代码生成优化",
						"ChatGLM General 通用端 - 用于通用对话"
					]
				},
				"chatglmRouter.enabledProviders": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": ["chatglm-coding"],
					"description": "启用的提供商（chatglm-general 默认禁用）"
				},
				"chatglmRouter.statistics.enabled": {
					"type": "boolean",
					"default": true,
					"description": "启用使用统计跟踪"
				},
				"chatglmRouter.statistics.statusBar.enabled": {
					"type": "boolean",
					"default": true,
					"description": "在状态栏显示用量统计"
				},
				"chatglmRouter.statistics.statusBar.displayMode": {
					"type": "string",
					"enum": ["normal", "compact", "minimal"],
					"default": "normal",
					"description": "状态栏显示模式",
					"enumDescriptions": [
						"完整显示（包含图标和完整描述）",
						"紧凑显示（简化文本）",
						"最小化（仅显示关键数字）"
					]
				},
				"chatglmRouter.statistics.statusBar.timeRange": {
					"type": "string",
					"enum": ["week", "month", "both"],
					"default": "both",
					"description": "状态栏显示的时间范围",
					"enumDescriptions": [
						"仅显示本周统计",
						"仅显示本月统计",
						"同时显示本周和本月统计（在 tooltip 中）"
					]
				},
				"chatglmRouter.statistics.statusBar.showRequestCount": {
					"type": "boolean",
					"default": true,
					"description": "在状态栏显示请求数"
				},
				"chatglmRouter.statistics.modelTooltip.enabled": {
					"type": "boolean",
					"default": true,
					"description": "在模型选择器中显示使用统计"
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"download-api": "dts dev",
		"postdownload-api": "dts main",
		"postinstall": "npm run download-api",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"format": "prettier --write .",
		"watch": "tsc -watch -p ./",
		"test": "npm run compile && vscode-test",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^22",
		"@types/mocha": "^10.0.6",
		"@vscode/dts": "^0.4.1",
		"@types/vscode": "^1.103.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.13.0",
		"prettier": "^3.1.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"packageManager": "npm@10.9.2"
}
