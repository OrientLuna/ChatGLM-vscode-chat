{
	"name": "chatglm-router-vscode",
	"publisher": "OrientLuna",
	"displayName": "ChatGLM Router for GitHub Copilot Chat",
	"description": "A multi-provider extension that integrates ChatGLM (with Coding and General endpoints) and custom OpenAI-compatible providers into GitHub Copilot Chat",
	"icon": "assets/logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/OrientLuna/ChatGLM-vscode-chat"
	},
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.104.0"
	},
	"categories": [
		"AI",
		"Chat"
	],
	"galleryBanner": {
		"color": "#100f11",
		"theme": "dark"
	},
	"badges": [
		{
			"url": "https://img.shields.io/github/stars/OrientLuna/ChatGLM-vscode-chat?style=social",
			"description": "Star ChatGLM-vscode-chat on Github",
			"href": "https://github.com/OrientLuna/ChatGLM-vscode-chat"
		}
	],
	"homepage": "https://github.com/OrientLuna/ChatGLM-vscode-chat",
	"bugs": {
		"url": "https://github.com/OrientLuna/ChatGLM-vscode-chat/issues"
	},
	"license": "MIT",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"languageModelChatProviders": [
			{
				"vendor": "chatglm-router",
				"displayName": "ChatGLM Router",
				"managementCommand": "chatglmRouter.manage"
			}
		],
		"commands": [
			{
				"command": "chatglmRouter.manage",
				"title": "Manage ChatGLM Router"
			},
			{
				"command": "chatglmRouter.showStatistics",
				"title": "Show Usage Statistics"
			},
			{
				"command": "chatglmRouter.resetStatistics",
				"title": "Reset Usage Statistics"
			},
			{
				"command": "chatglmRouter.showStatisticsInOutput",
				"title": "Show Statistics in Output"
			},
			{
				"command": "chatglmRouter.clearApiKey",
				"title": "Clear ChatGLM API Key"
			}
		],
		"configuration": {
			"title": "ChatGLM Router",
			"properties": {
				"chatglmRouter.defaultProvider": {
					"type": "string",
					"enum": ["chatglm-coding", "chatglm-general"],
					"default": "chatglm-coding",
					"description": "Default provider (ChatGLM Coding is recommended for VS Code)",
					"enumDescriptions": [
						"ChatGLM Coding endpoint - optimized for code generation",
						"ChatGLM General endpoint - for general chat"
					]
				},
				"chatglmRouter.enabledProviders": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": ["chatglm-coding"],
					"description": "Enabled providers (chatglm-general disabled by default)"
				},
				"chatglmRouter.statistics.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable usage statistics tracking"
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"download-api": "dts dev",
		"postdownload-api": "dts main",
		"postinstall": "npm run download-api",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"format": "prettier --write .",
		"watch": "tsc -watch -p ./",
		"test": "npm run compile && vscode-test",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^22",
		"@types/mocha": "^10.0.6",
		"@vscode/dts": "^0.4.1",
		"@types/vscode": "^1.103.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.13.0",
		"prettier": "^3.1.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"packageManager": "npm@10.9.2"
}
